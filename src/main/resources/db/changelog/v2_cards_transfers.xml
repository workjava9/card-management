<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.21.xsd">
    <changeSet id="2-create-cards" author="chatgpt">
        <createTable tableName="cards">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="owner_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_cards_owner" referencedTableName="users" referencedColumnNames="id"/>
            </column>
            <column name="enc_number" type="VARCHAR(512)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="last4" type="VARCHAR(4)">
                <constraints nullable="false"/>
            </column>
            <column name="exp_month" type="INT"/>
            <column name="exp_year" type="INT"/>
            <column name="status" type="VARCHAR(16)"/>
            <column name="balance" type="NUMERIC(19,2)" defaultValueNumeric="0"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>

    <changeSet id="3-create-card-transfers" author="chatgpt">
        <createTable tableName="card_transfers">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="from_card_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_tr_from" referencedTableName="cards" referencedColumnNames="id"/>
            </column>
            <column name="to_card_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_tr_to" referencedTableName="cards" referencedColumnNames="id"/>
            </column>
            <column name="amount" type="NUMERIC(19,2)"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
